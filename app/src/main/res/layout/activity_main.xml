<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="14dp"
    android:windowSoftInputMode="adjustResize"
    android:id="@+id/main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="@color/color_black"
                android:textSize="35dp" />


                <EditText
                    android:id="@+id/nome_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:inputType="text" />



                <EditText
                    android:id="@+id/email_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Login"
                    android:inputType="textEmailAddress" />


                <EditText
                    android:id="@+id/senha_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha"
                    android:inputType="textPassword" />


                <EditText
                    android:id="@+id/confirmar_senha_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmação de senha"
                    android:inputType="textPassword" />



                <EditText
                    android:id="@+id/cpf_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF"
                    android:inputType="number" />

            <Button
                android:id="@+id/final_buton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:onClick="FinalizarCadastroButton"
                android:text="Salvar" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>